# Production Environment Variables for PhotoVault
# Copy this to .env.local and fill in your production values

# ==============================================
# SUPABASE (Production Database)
# ==============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ==============================================
# DOMAIN CONFIGURATION
# ==============================================
NEXT_PUBLIC_WEB_URL=https://photovault.pro
NEXT_PUBLIC_CLIENT_URL=https://photovault.biz
NEXT_PUBLIC_GALLERY_URL=https://photovault.site
NEXT_PUBLIC_BLOG_URL=https://photovault.blog

# ==============================================
# STRIPE (Production)
# ==============================================
STRIPE_SECRET_KEY=sk_live_your_live_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id

# Stripe Product IDs (from your Stripe dashboard)
STRIPE_CLIENT_FIRST_YEAR_PRICE_ID=price_your_first_year_price
STRIPE_CLIENT_MONTHLY_PRICE_ID=price_your_monthly_price
STRIPE_PHOTOGRAPHER_PRICE_ID=price_your_photographer_price

# ==============================================
# EMAIL SERVICE (Production)
# ==============================================
RESEND_API_KEY=re_your_resend_api_key
# OR if using SendGrid:
# SENDGRID_API_KEY=SG.your_sendgrid_api_key

# ==============================================
# UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=104857600
CHUNK_SIZE=6291456
UPLOAD_TIMEOUT=300000

# ==============================================
# SECURITY
# ==============================================
NEXTAUTH_SECRET=your-super-secret-nextauth-secret
NEXTAUTH_URL=https://photovault.pro

# ==============================================
# ANALYTICS (Optional)
# ==============================================
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your-hotjar-id

# ==============================================
# MONITORING (Optional)
# ==============================================
SENTRY_DSN=your-sentry-dsn
VERCEL_URL=your-vercel-url

