# ===========================================
# STRIPE CONFIGURATION - Add to .env.local
# ===========================================

# Get from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx

# Get from Stripe CLI: stripe listen --forward-to localhost:3002/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# Get from https://dashboard.stripe.com/test/connect/settings
STRIPE_CONNECT_CLIENT_ID=ca_xxxxxxxxxxxxxxxxxxxxx

# Create products in Stripe Dashboard â†’ Products, then copy Price IDs
STRIPE_CLIENT_FIRST_YEAR_PRICE_ID=price_xxxxx  # $100 for 12 months
STRIPE_CLIENT_MONTHLY_PRICE_ID=price_yyyyy     # $8/month after year 1
STRIPE_PHOTOGRAPHER_PRICE_ID=price_zzzzz       # $22/month for photographers

# ===========================================
# EMAIL CONFIGURATION - Add to .env.local
# ===========================================

# Option 1: Resend (Recommended - easier setup)
# Get from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx

# Option 2: SendGrid (More features)
# Get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@photovault.com

# ===========================================
# APPLICATION URLS
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3002
NEXT_PUBLIC_SUCCESS_URL=http://localhost:3002/dashboard
NEXT_PUBLIC_CANCEL_URL=http://localhost:3002/pricing


